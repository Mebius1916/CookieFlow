{
  "manifest_version": 3,
  "name": "Cookie Master",
  "description": "一个简洁现代的Cookie复制和管理工具",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon.svg",
    "32": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  }
} 